<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10"
    android:layout_marginTop="18dp">

    <TextView
        android:id="@+id/tv_unbind_bank_card"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bg_red"
        android:gravity="center"
        android:text="解绑"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_blue">

        <ImageView
            android:id="@+id/iv_bank_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10" />

        <TextView
            android:id="@+id/tv_bank"
            style="@style/text_white_16sp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toRightOf="@id/iv_bank_logo" />

        <TextView
            android:id="@+id/tv_bank_type"
            style="@style/text_white_14sp"
            android:layout_alignLeft="@id/tv_bank"
            android:layout_below="@id/tv_bank"
            android:layout_marginTop="@dimen/dp5" />

        <TextView
            android:id="@+id/tv_bank_num"
            style="@style/text_white_14sp"
            android:layout_alignLeft="@id/tv_bank"
            android:layout_below="@id/tv_bank_type"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center_vertical"
            android:textSize="28sp" />
    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>
