<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/sel_com">
        <ImageView
            android:src="@drawable/ic_message_check"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="22dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_message_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_black_18sp"
                    android:textColor="#010101"
                    android:text="预约消息" />
                <TextView
                    android:id="@+id/tv_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_black_18sp"
                    android:textColor="#010101"
                    android:layout_marginLeft="94dp"
                    android:text="01/23" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_message_content"
                android:layout_marginBottom="12dp"
                style="@style/text_gray_14sp"
                android:text="您已经成功预约*******" />
            <View style="@style/gray_line_h" android:layout_marginRight="@dimen/dp10"/>
        </LinearLayout>
        
    </LinearLayout>
</RelativeLayout>
