<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_place"
            style="@style/text_gray_14sp"
            android:text="万达广场(厦门湖里店)"
            android:textSize="@dimen/text_size24" />

        <TextView
            android:id="@+id/tv_distance"
            style="@style/text_gray_14sp"
            android:layout_alignBottom="@id/tv_place"
            android:layout_alignParentRight="true"
            android:text="距离：300km" />

        <TextView
            style="@style/text_gray_14sp"
            android:layout_below="@id/tv_place"
            android:layout_marginTop="10dp"
            android:text="厦门市湖里区仙岳路520号" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/top_blue"
        android:text="导航"
        android:textColor="@color/white"
        android:textSize="24sp" />
</LinearLayout>
