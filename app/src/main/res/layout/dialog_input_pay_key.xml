<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp10">

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_close_gray" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_gray_16sp"
        android:layout_width="match_parent"
        android:layout_below="@id/img_cancel"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center"
        android:text="@string/input_pay_key"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/ll_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num_1"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_rectangle"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_num_2"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_rectangle"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_num_3"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_rectangle"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_num_4"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_rectangle"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_num_5"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_rectangle"
                android:gravity="center"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_num_6"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_rectangle"
                android:gravity="center"
                android:maxLines="1" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_num"
            android:layout_alignLeft="@id/ll_num"
            android:layout_alignRight="@id/ll_num"
            android:layout_alignTop="@id/ll_num"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="#0000" />

    </RelativeLayout>
</RelativeLayout>
