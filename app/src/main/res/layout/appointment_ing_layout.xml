<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="25dp"
                android:paddingLeft="9dp"
                android:paddingTop="25dp"
                android:text="@string/appointment_ing_tip"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/text_size16" />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <TextView
                            android:id="@+id/tv_park_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="112dp"
                            android:layout_marginRight="25dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="XX云能停车场"
                            android:textColor="#333333"
                            android:textSize="@dimen/text_size18" />

                        <TextView
                            android:id="@+id/tv_navigation"
                            android:layout_width="@dimen/dp60"
                            android:layout_height="@dimen/dp60"
                            android:layout_marginBottom="17dp"
                            android:layout_marginRight="@dimen/dp30"
                            android:background="@drawable/blue_circle_bg"
                            android:gravity="center"
                            android:text="@string/navigation"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="21dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="25dp">

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="厦门市湖里区金山路***号"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/text_size16" />

                        <TextView
                            android:id="@+id/tv_distance"
                            style="@style/text_gray_16sp"
                            android:layout_marginLeft="40dp"
                            android:text="距离：12km" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="26dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="25dp">

                        <TextView
                            style="@style/text_black_16sp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="车位编号：" />

                        <TextView
                            android:id="@+id/tv_parking_num"
                            style="@style/text_black_16sp"
                            android:layout_marginLeft="10dp"
                            android:text="123456" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="22dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="25dp">

                        <TextView
                            style="@style/text_black_18sp"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_time"
                            android:drawablePadding="@dimen/dp10"
                            android:ellipsize="end"
                            android:text="预约时间" />

                        <TextView
                            android:id="@+id/tv_time"
                            style="@style/text_gray_18sp"
                            android:text="（16:40）" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_tip1"
                        style="@style/text_gray_16sp"
                        android:paddingBottom="22dp"
                        android:paddingLeft="17dp"
                        android:text="@string/appointment_ing_tip1" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="26dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="25dp"
                    android:paddingTop="21dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_gray_14sp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="共享时间段：" />

                        <TextView
                            android:id="@+id/tv_share_time"
                            style="@style/text_gray_14sp"
                            android:layout_marginLeft="10dp"
                            android:text="21:00-24:00" />
                    </LinearLayout>

                    <TextView
                        style="@style/text_gray_16sp"
                        android:lineSpacingExtra="@dimen/dp5"
                        android:text="@string/share_tip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp20"
                    android:paddingTop="@dimen/dp30">

                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="113dp"
                        android:layout_height="48dp"
                        android:background="@drawable/shape_bg_blue"
                        android:gravity="center"
                        android:text="@string/cancel_appointment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size18" />

                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="113dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/dp50"
                        android:background="@drawable/shape_bg_blue"
                        android:gravity="center"
                        android:text="@string/confirm_arrive"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size18" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
