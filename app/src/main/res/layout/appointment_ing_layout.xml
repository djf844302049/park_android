<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/text_size16"
                android:id="@+id/tv_tip"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:paddingLeft="9dp"
                android:gravity="left"
                android:text="@string/appointment_ing_tip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_park_name"
                        android:textColor="#333333"
                        android:layout_width="0dp"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:text="XX云能停车场"
                        android:layout_marginLeft="112dp"
                        android:textSize="@dimen/text_size18"
                        android:layout_marginRight="25dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_navigation"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size16"
                        android:layout_marginRight="@dimen/dp30"
                        android:text="@string/navigation"
                        android:gravity="center"
                        android:layout_marginBottom="17dp"
                        android:background="@drawable/blue_circle_bg"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="@dimen/dp60" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="21dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_address"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size16"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:ellipsize="end"
                        android:text="厦门市湖里区金山路***号"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_distance"
                        style="@style/text_gray_16sp"
                        android:layout_marginLeft="40dp"
                        android:text="距离：12km"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="26dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/text_black_16sp"
                        android:ellipsize="end"
                        android:text="车位编号："
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_parking_num"
                        style="@style/text_black_16sp"
                        android:layout_marginLeft="10dp"
                        android:text="123456"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="17dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="22dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/text_black_18sp"
                        android:ellipsize="end"
                        android:text="预约时间"
                        android:drawableLeft="@drawable/ic_time"
                        android:drawablePadding="@dimen/dp10"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/text_gray_18sp"
                        android:text="（16:40）"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tip1"
                    style="@style/text_gray_16sp"
                    android:paddingLeft="17dp"
                    android:paddingBottom="22dp"
                    android:text="@string/appointment_ing_tip1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:paddingRight="25dp"
                android:paddingBottom="26dp"
                android:paddingTop="21dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/text_gray_14sp"
                        android:ellipsize="end"
                        android:text="共享时间段："
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_share_time"
                        style="@style/text_gray_14sp"
                        android:layout_marginLeft="10dp"
                        android:text="21:00-24:00"/>
                </LinearLayout>
                <TextView
                    style="@style/text_gray_16sp"
                    android:lineSpacingExtra="@dimen/dp5"
                    android:text="@string/share_tip"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_"
                    android:layout_width="113dp"
                    android:layout_height="48dp"
                    android:background="@drawable/shape_bg_blue"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size18"
                    android:text="@string/cancel_appointment"/>
                <TextView
                    android:layout_width="113dp"
                    android:layout_height="48dp"
                    android:background="@drawable/shape_bg_blue"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp50"
                    android:textSize="@dimen/text_size18"
                    android:text="@string/confirm_arrive"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>   



</RelativeLayout>
