<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/top_blue"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="30dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_width="1dp" />

                    <TextView
                        android:id="@+id/tv_login"
                        android:paddingLeft="@dimen/dp5"
                        android:paddingRight="@dimen/dp5"
                        android:paddingTop="@dimen/dp10"
                        android:paddingBottom="@dimen/dp10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/album_sp_14"
                        android:background="@drawable/shape_transparent_round_stroke_white_bg"
                        android:text="@string/login_or_register" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_gray_14sp"
                        android:text="@string/mine_wallet" />

                    <TextView
                        style="@style/text_gray_14sp"
                        android:layout_gravity="right"
                        android:drawablePadding="3dp"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="center"
                        android:text="余额：￥20" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/text_gray_14sp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="@string/park_record" />

                <TextView
                    style="@style/text_gray_14sp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="@string/order_record" />

                <TextView
                    style="@style/text_gray_14sp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="@string/car_monitor" />

                <TextView
                    style="@style/text_gray_14sp"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:gravity="center"
                    android:text="@string/mine_car" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/text_gray_14sp"
                    android:layout_weight="1"
                    android:text="@string/id_confirm" />

                <TextView
                    style="@style/text_gray_14sp"
                    android:drawablePadding="3dp"
                    android:drawableRight="@mipmap/img_right_arrow"
                    android:text="认证中" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/text_gray_14sp"
                    android:layout_weight="1"
                    android:text="@string/common_questions" />

                <ImageView
                    style="@style/common_text"
                    android:src="@mipmap/img_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/text_gray_14sp"
                    android:layout_weight="1"
                    android:text="@string/advise" />

                <ImageView
                    style="@style/common_text"
                    android:src="@mipmap/img_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/text_gray_14sp"
                    android:layout_weight="1"
                    android:text="@string/setting" />

                <ImageView
                    style="@style/common_text"
                    android:src="@mipmap/img_right_arrow" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
