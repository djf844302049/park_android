<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <EditText
        android:id="@+id/et_phone_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="33dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/input_phone_num"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_confirm_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/input_confirm_num"
            android:inputType="number"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/tv_get_code"
            style="@style/text_gray_14sp"
            android:layout_width="90dp"
            android:layout_height="43dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_bg_blue_gray"
            android:gravity="center"
            android:text="@string/get_confirm_num"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/shape_bg_blue"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size18" />
</LinearLayout>
