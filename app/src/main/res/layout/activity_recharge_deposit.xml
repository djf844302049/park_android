<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView
        style="@style/text_gray_14sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/recharge_deposit_tip"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="111dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/tv_deposit_num"
            style="@style/text_gray_18sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black" />

        <TextView
            style="@style/text_gray_18sp"
            android:layout_marginTop="20dp"
            android:text="@string/deposit"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_al_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_gray_14sp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/ali_pay"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_al_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/img_big_tick"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_wx_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_gray_14sp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="@string/wx_pay"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_wx_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/img_big_tick"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="5dp"
        android:text="@string/recharge_deposit_tip_detail" />

    <Button
        android:id="@+id/btn_confirm_pay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_bg_blue"
        android:text="@string/confirm_pay"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size18" />

</LinearLayout>
