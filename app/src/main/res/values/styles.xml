<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableRight">@drawable/selector_radio_btn</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="my_dialog_styles">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@drawable/dialog_bg</item><!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
    </style>

    <style name="dialog_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size14</item>
        <item name="android:padding">@dimen/dp15</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <!--文本样式-->
    <style name="text_white_12sp" parent="common_white_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_white_14sp" parent="common_white_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_white_16sp" parent="common_white_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_white_18sp" parent="common_white_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_white_20sp" parent="common_white_text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_gray_12sp" parent="common_gray_text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_gray_14sp" parent="common_gray_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_gray_16sp" parent="common_gray_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_gray_18sp" parent="common_gray_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_black_18sp" parent="common_black_text">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text_black_16sp" parent="common_black_text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_gray_20sp" parent="common_gray_text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="common_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_white_text" parent="common_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="common_gray_text" parent="common_text">
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="common_black_text" parent="common_text">
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="gray_line_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_line</item>
    </style>
    <style name="gray_line_h_10">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/gray_line</item>
    </style>
</resources>
